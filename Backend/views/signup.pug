extends layout

block content
    ul(id="navbar")
        each item in config.menu
            if item[2] === true
                li(class="floater")     
                        a(href=item[1])=item[0]
            else
                li
                    a(href=item[1])=item[0]
    div(id="formContent")
        form(action="/signup", method="post")
            input(type="text", name="username", placeholder="Username")
            br
            input(type="password", name="password", placeholder="Password")
            br
            label(for="q1") What is you favourite food? 
            select(name="q1")
                option(value="pizza") Pizza
                option(value="hotdog") Hotdogs
                option(value="hamurger") Hamburgers
                option(value="other") Other
            br
            label(for="q2") Which mascot do you prefer? 
            select(name="q2")
                option(value="smokey") Smokey Bear
                option(value="woodsy") Woodsy Owl
                option(value="mcgruff") McGruff the Crime Dog
            br
            label(for="q3") How many languages do you know?
            select(name="q3")
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4+
            br
            input(type="submit" value="Sign Up")
        